@model IEnumerable<EL.ViewModel.RegistrationViewModel>
@{
    ViewData["Title"] = "EmployeeList";
}

<div class="container">
    <h3 class="text-center mt-5 mb-4">All Employees</h3>


    <div class="d-flex justify-content-between align-items-center mt-5 mb-4">
        <a href="../Registration/Index" class="d-inline-block btn bg-orange">Create New</a>
    </div>

    <table class="table mt-3">
        <thead>
            <tr class="table-primary">
                <th scope="col">Name</th>
                <th scope="col">Gender</th>
                <th scope="col">Contact Number</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Role</th>
                <th scope="col">Shift</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>@(item.FirstName + " " + item.LastName)</td>                    
                    <td>@item.Gender</td>
                    <td>@item.ContactNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Role</td>
                    <td>@item.Shift</td>
                    <td>
                        @Html.ActionLink("Edit", "Index", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>

