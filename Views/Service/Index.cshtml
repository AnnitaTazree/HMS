@model IEnumerable<EL.ViewModel.ServiceViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h3 class="text-center mt-5 mb-4">All Services</h3>


    <div class="d-flex justify-content-between align-items-center mt-5 mb-4">
        <a href="../Service/AddService" class="d-inline-block btn bg-orange">Create New</a>        
    </div>

    <table class="table mt-3">
        <thead>
            <tr class="table-primary">
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>@item.ServiceCode</td>
                    <td>@item.ServiceName</td>
                    <td>
                        @Html.ActionLink("Edit", "AddService", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }

        </tbody>
    </table>



</div>

